<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignorSignup"
    android:orientation="vertical"
    android:background="@drawable/signinorsignup">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Um, New Here?"
            android:textSize="35dp"
            android:textColor="#32023C"
            android:fontFamily="@font/norwester"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glad to see you buddy."
                android:textSize="35dp"
                android:textColor="#32023C"
                android:fontFamily="@font/oswaldregular"/>

            <View
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:background="#9663A5"

                android:layout_gravity="center_horizontal"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make an account"
                android:textSize="20dp"
                android:textColor="#32023C"
                android:fontFamily="@font/colabthi"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal">
                <Button
                    android:id="@+id/signupbtnnew"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="Create an account"
                    android:textAllCaps="false"
                    android:background="@drawable/roundedbuttonforfeedback"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"/>

                </LinearLayout>





        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:saveEnabled="true"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already"
            android:textSize="35dp"
            android:textColor="#32023C"
            android:fontFamily="@font/norwester"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register ?"
            android:textSize="35dp"
            android:textColor="#32023C"
            android:fontFamily="@font/norwester"
            />

        <View
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:background="#9663A5"

            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just Sign in"
            android:textSize="20dp"
            android:textColor="#32023C"
            android:fontFamily="@font/colabthi"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/signinbtnnew"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Sign In"
                android:textAllCaps="false"
                android:background="@drawable/roundedbuttonforfeedback"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>

