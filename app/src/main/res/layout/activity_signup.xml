        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textSize="45dp"
            android:fontFamily="@font/norwester"/>


    </LinearLayout>

<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#000000"
            android:text="new here ?"
            android:fontFamily="@font/colabthi"
            android:textAllCaps="true"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#1B1B1B"
            android:text="Create an account to continue"

            />

        <EditText
            android:id="@+id/username"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="User name"
            android:background="@drawable/roundededittextforsignin"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:id="@+id/emailid"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="Email address"
            android:background="@drawable/roundededittextforsignin"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/roundededittextforsignin"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            />



        <Button
            android:id="@+id/signupbutton"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:background="@drawable/roundedbuttonforfeedback"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            />






    </LinearLayout>

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:background="#9663A5"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already signed up ?"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/colabthi"
            android:textStyle="bold"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/colabthi"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/forwardtosignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/oswaldregular"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>