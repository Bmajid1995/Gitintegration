<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000000"
        android:text="Welcome"
        android:fontFamily="@font/colabthi"
        android:textAllCaps="true"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#1B1B1B"
        android:text="Nice to see you there !"

        />

    <EditText
        android:id="@+id/signinemailid"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:hint="Email address"
        android:background="@drawable/roundededittextforsignin"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/signinpassword"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/roundededittextforsignin"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"/>



    <Button
        android:id="@+id/signinbutton"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:background="@drawable/roundedbuttonforfeedback"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"/>



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:textColor="#020202"
            android:layout_marginTop="50dp"
            android:clickable="true"/>


    </LinearLayout>

    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:background="#9663A5"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have any Account?"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="@font/colabthi"
        android:textStyle="bold"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="@font/colabthi"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#000000"
        android:textSize="20dp"
        android:fontFamily="@font/oswaldregular"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/forwardtosignup"/>

</LinearLayout>

</LinearLayout>